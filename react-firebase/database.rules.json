{
  "rules": {
    ".read": "auth != null",
    "users": {
      "$uid": {
        ".write": "$uid === auth.uid || root.child('users').child('ROLES').child('ADMIN').val() === true"
      }
    },
    "profiles":{
      "$uid": {
       	".write": "$uid === auth.uid || root.child('users').child('ROLES').child('ADMIN').val() === true"
      }
    }
  }
}